@media screen and (min-width: 900px)
  .content .post .content,
  .post-list .post-item,
  .project-list .project-item,
  .tagcloud
    a, a:hover
      position: relative
    a::after
      content: ""
      position: absolute
      bottom: 0
      left: auto
      right: 0
      width: 0
      transition: .39s
      background-color: rgba($color-link, .56)
      height: 5.6px
    a:hover::after
      left: 0
      right: auto
      width: 100%
