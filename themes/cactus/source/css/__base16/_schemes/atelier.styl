/* Base16 Atelier Light Theme */
/* by Bram de Haan (http://atelierbram.github.io/syntax-highlighting/atelier-schemes/cave) */
/* Original Base16 color scheme by Chris Kempson (https://github.com/chriskempson/base16) */

.highlight
    color: $base02
    background: $base07
    @media (prefers-color-scheme: dark)
        color: $base05
        background: $base00
    .code
        /* Atelier Comment */
        .comment,
        .quote
            color: $base03
            @media (prefers-color-scheme: dark)
                color: $base04

        /* Atelier Red */
        .variable,
        .template-variable,
        .attribute,
        .tag,
        .name,
        .regexp,
        .link,
        .name,
        .name,
        .selector-id,
        .selector-class
            color: $base-red

        /* Atelier Orange */
        .number,
        .meta,
        .built_in,
        .builtin-name,
        .literal,
        .type,
        .params
            color: $base-orange

        /* Atelier Green */
        .string,
        .symbol,
        .bullet
            color: $base-green

        /* Atelier Blue */
        .title,
        .section
            color: $base-blue

        /* Atelier Purple */
        .keyword,
        .selector-tag
            color: $base-violet // Or `purple`

        .deletion,
        .addition
            color: $base00
            display: inline-block
            width: 100%

        .deletion
            background-color: $base-red

        .addition
            background-color: $base-green

        .emphasis
            font-style: italic

        .strong
            font-weight: bold
