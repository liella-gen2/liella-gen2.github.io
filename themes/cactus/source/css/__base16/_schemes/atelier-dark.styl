/* Base16 Atelier Dark Theme */
/* by Bram de Haan (http://atelierbram.github.io/syntax-highlighting/atelier-schemes/forest) */
/* Original Base16 color scheme by Chris Kempson (https://github.com/chriskempson/base16) */
.highlight
  background: $base00
  color: $base05

  .code
    /* Atelier Comment */
    .comment, .quote
      color: $base04

    /* Atelier Red */
    .variable, .template-variable, .attribute, .tag, .name, .regexp, .link, .name, .selector-id, .selector-class
      color: $base-red

    /* Atelier Orange */
    .number, .meta, .built_in, .builtin-name, .literal, .type, .params
      color: $base-orange

    /* Atelier Green */
    .string, .symbol, .bullet
      color: $base-green

    /* Atelier Blue */
    .title, .section
      color: $base-blue

    /* Atelier Purple */
    .keyword, .selector-tag
      color: $base-violet

    .deletion, .addition
      display: inline-block
      width: 100%
      color: $base00

    .deletion
      background-color: $base-red

    .addition
      background-color: $base-green

    .emphasis
      font-style: italic

    .strong
      font-weight: bold
